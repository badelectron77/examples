<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:orientation="vertical"
    android:gravity="center">

    <Space
        android:id="@+id/view_card_offline_top_padding"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/view_offline_card_text"
        android:textColor="@color/view_wiki_error_text_color"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/view_card_offline_button_retry"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        android:text="@string/page_error_retry"
        android:minHeight="36dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/view_wiki_error_text_color"/>
</LinearLayout>
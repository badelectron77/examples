<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="vertical"
    android:paddingLeft="@dimen/item_horizontal_padding"
    android:paddingRight="@dimen/item_horizontal_padding">

    <TextView
        android:id="@+id/txt_class_name"
        style="@style/common_text_view_style"
        android:layout_marginTop="10dp"
        android:textColor="@color/tiny_2"
        android:textSize="18sp"
        tools:text="className" />

    <TextView
        android:id="@+id/txt_description"
        style="@style/common_text_view_style"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        tools:text="description" />
</LinearLayout>